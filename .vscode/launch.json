    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run", 
                "${workspaceFolder}/src/streamlit/Home.py"
            ],
            "console": "integratedTerminal",
            "env": { "FLIGHTS_ENV": "dev" }
        },
        {
            "name": "Dev",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": { "FLIGHTS_ENV": "dev" }
        },
        {
            "name": "Prod",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": { "FLIGHTS_ENV": "prod" }
        }
    ]
}