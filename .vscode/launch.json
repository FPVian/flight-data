    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run", 
                "${workspaceFolder}/src/skyviz/Home.py"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Dev Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": { "SKYVIZ_ENV": "dev" }
        },
        {
            "name": "Prod Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": { "SKYVIZ_ENV": "prod" }
        },
        {
            "name": "Debug Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": { "SKYVIZ_ENV": "test" }
        },
    ]
}